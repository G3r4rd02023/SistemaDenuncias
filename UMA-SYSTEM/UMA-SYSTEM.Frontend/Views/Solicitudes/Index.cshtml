@model IEnumerable<UMA_SYSTEM.Frontend.Models.Solicitud>

@{
    ViewData["Title"] = "Index";
}

@section Estilos {
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css" rel=" stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<style>
    .btn-exportar-excel {
        background-color: #198754 !important;
        color: white !important;
        display: inline-flex;
        align-items: center;
    }

    .btn-exportar-pdf {
        background-color: #dc3545 !important;
        color: white !important;
    }

    .btn-exportar-print {
        background-color: #00a7c9 !important;
        color: white !important;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["AlertMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: '¡Éxito!',
                text: '@TempData["AlertMessage"]',
                icon: 'success',
                confirmButtonText: 'Aceptar'
            });
        });
    </script>
}


<p>
    <a onclick="showInPopup('@Url.Action("Create", "Solicitudes", new { id = 0 }, Context.Request.Scheme)' , '')"
       class="btn btn-sm btn-primary text-white mt-3"><i class=" oi oi-plus"></i>  Crear solicitud</a>
</p>

<div class=" card">
    <div class=" card-header text-center bg-info text-white">
        <h5>Listado de Solicitudes</h5>       
    </div>
    <div class="card-body">
        <table id="solicitud" class="table table-hover table responsive table stripped">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DNI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaSolicitud)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aldea)
                    </th>                    
                                    
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DNI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                        </td>
                        
                        <td>@item.FechaSolicitud.ToString("yyyy-MM-dd")</td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Aldea)
                        </td>                                              
                        <td>
                            <a onclick="showInPopup('@Url.Action("Details", "Solicitudes", new { id = item.Id }, Context.Request.Scheme)' ,
                    '')" class="btn btn-outline-info btn-sm"><i class="oi oi-list"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>

<partial name="_MostrarModal" />
<partial name="_ModalEliminar" />

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/showmodal.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#solicitud').DataTable({
                "language": {
                    url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
                dom: "Bfrtip",
                buttons: [
                    //excel
                    {
                        extend: 'excelHtml5',
                        text: '<i class= "fas fa-file-excel"></i> ',
                        filename: 'Reporte Solicitudes',
                        title: 'Reporte Solicitudes',
                        exportOptions: {
                            columns: [1, 2, 3, 4]
                        },
                        className: 'btn-exportar-excel',

                    },
                    //pdf
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa-solid fa-file-pdf"></i> ',
                        filename: 'Reporte Solicitudes',
                        title: 'Reporte de solicitudes',
                        exportOptions: {
                            columns: [1, 2, 3, 4]
                        },
                        className: 'btn-exportar-pdf',
                    },
                    //print
                    {
                        extend: 'print',
                        text: '<i class="fa-solid fa-print"> </i>',
                        title: 'Reporte de solicitudes',
                        exportOptions: {
                            columns: [1, 2, 3, 4]
                        },
                        className: 'btn-exportar-print'

                    },
                    //numero de paginas
                    'pageLength'
                ]
            });
        });
    </script>

}