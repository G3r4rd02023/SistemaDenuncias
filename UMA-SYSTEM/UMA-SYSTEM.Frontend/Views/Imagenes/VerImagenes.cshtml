@model IEnumerable<UMA_SYSTEM.Frontend.Models.Anexo>
@{
    ViewData["Title"] = "VerImagenes";
}



<style type="text/css">
    .card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border: 1px solid lightgray;
        box-shadow: 2px 2px 8px 4px #d3d3d3d1;
        border-radius: 15px;
        font-family: sans-serif;
        margin: 5px;
    }
</style>


<h4 class=" text-center mt-3">Evidencia de la denuncia</h4>
<hr />

<div class=" row">
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var imagen in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3 shadow-sm">
                        <div class=" card-title text-center">
                            <h5>@imagen.Fecha</h5>
                        </div>
                        <div class="card-body">
                            <div class=" zoom">
                                <img class="card-img-top" src="@imagen.URL" alt="Imagen de la denuncia" style="height:250px; max-width:300px;">
                            </div>
                            <p class="card-text">Descripcion: @imagen.Denuncia!.DescripcionHechos</p>
                        </div>
                        <div class="card-footer text-center">
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h3>No hay imagenes disponibles</h3>
    }
</div>

